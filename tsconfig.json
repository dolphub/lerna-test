{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./packages",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noLib": false,
        "preserveSymlinks": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6"
    },
    "exclude": ["node_modules", "**/*.spec.ts"]
}
